<table id="sylius-product-attributes" class="ui definition table" {{ sylius_test_html_attribute('product-attributes') }}>
    <tbody>
    {% for attribute in attributes|sort_by('attribute.position') %}
        <tr>
            <td class="sylius-product-attribute-name" {{ sylius_test_html_attribute('product-attribute-name', attribute.name) }}>{{ attribute.name }}</td>
            <td class="sylius-product-attribute-value" {{ sylius_test_html_attribute('product-attribute-value', attribute.name) }}>
                {% include [
                    '@OwlAdmin/Equipment/Attribute/Types/'~attribute.attribute.type~'.html.twig',
                    '@OwlAttribute/Types/'~attribute.attribute.type~'.html.twig',
                    '@OwlAdmin/Equipment/Attribute/Types/default.html.twig'
                ] with {
                    'attribute': attribute
                } %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
