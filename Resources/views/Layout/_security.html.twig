<div class="ui floated simple dropdown item">
    {% include '@OwlAdmin/AdminUser/_avatarImage.html.twig' %}
    <span>{{ app.user.displayName|default(app.user.email) }}</span>
    <i class="dropdown icon"></i>
    <div class="menu">
        <a href="{{ path('owl_admin_admin_user_update', {'id': app.user.id}) }}" class="item">
            <i class="user icon"></i>
            {{ 'owl.ui.my_account'|trans }}
        </a>
        <a href="{{ path('owl_admin_logout') }}" data-turbo-method="GET" id="sylius-logout-button" class="item">
            <i class="sign out icon"></i>
            {{ 'owl.ui.logout'|trans }}
        </a>
    </div>
</div>
