{% from '@OwlAdmin/Macro/translationForm.html.twig' import translationForm %}

{{ form_errors(form) }}

<div class="ui segment">
    <div class="fields">
        {{ form_row(form.name, {row_attr: { wrap_field_classes: 'six wide' }} ) }}
        {{ form_row(form.code, {row_attr: { wrap_field_classes: 'three wide' }} ) }}
        {{ form_row(form.category, {row_attr: { wrap_field_classes: 'three wide' }} ) }}
        {{ form_row(form.position, {row_attr: { wrap_field_classes: 'two wide' }} ) }}
        {{ form_row(form.type, {row_attr: { wrap_field_classes: 'two wide' }} ) }}
    </div>
</div>
{% if form.configuration is defined %}
<div class="ui segment">
    <h4 class="ui dividing header">{{ 'owl.ui.configuration'|trans }}</h4>
    {% for field in form.configuration %}
        {{ form_row(field) }}
    {% endfor %}
</div>
{% endif %}
